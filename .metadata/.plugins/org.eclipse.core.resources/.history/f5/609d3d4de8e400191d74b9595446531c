            $(document).ready(function() {
            	let btn_search = $("#btn_search")   	
           	
            	btn_search.on("click", function (e) {          
                    const ids = $("#codProducto").val();
                    alert("id:zzz:" + ids); 
    
                    
                    $.ajax({  
                        url: "http://localhost:8083/detalleProducto/detalle?id=" + ids 
                    }).then(function (data) {  
                		alert("hola"); 
                    });  
            }); 
                    
                    
            }); 
